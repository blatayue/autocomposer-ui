// Element layout.
// Stuff like display, position, height, margin, padding

layoutPadding = 10px
inputHeight = 40px;

.root-panel
  display: flex
  flex-direction: row
  flex-wrap: nowrap

  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0

  & > .ac-panel#main-control-panel
    width: 40%
  & > .ac-panel
    width: 60%

.ac-panel
  padding: 10px 10px 0 10px
  border: 1px dashed #222
  flex: 10 1 auto

// Hides the main output panel if the Help panel or Control panel is visible
#control-panel + #output-panel
#help-panel + #output-panel
  display: none

.panel-row
  display: flex
  flex-wrap: nowrap
  padding: 0 0 10px 0

.panel-row.has-labels
  padding: 0 0 10px 0


.ac-panel.output-panel
  overflow: scroll
  overflow-y: scroll
  overflow-x: hidden


.ac-control-wrapper
  display: inline-block
  padding: 0 (layoutPadding / 2)
  box-sizing: border-box
  // 8 can be conisdered full-width. Input wrappers all try to fill width by default.
  flex-grow: 8

  &:first-child
    padding-left: 0

  &:last-child
    padding-right: 0

  &.square
    flex-grow: 0
    width: (layoutPadding + inputHeight) * 2

  &.flex-sm
    flex-grow: 2

  &.flex-md
    flex-grow: 4

  &.flex-lg
    flex-grow: 8

  .ac-input.text,
  .ac-output.text
    padding: 2px 6px
    font-size: 20px

.ac-input,
.ac-output
  width: 100%
  height: inputHeight
  box-sizing: border-box

.ac-input-label
  font-size: 12px
  text-transform: uppercase
  letter-spacing: 2px
  padding-left: 1px
