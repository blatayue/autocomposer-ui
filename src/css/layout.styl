// Element layout.
// Stuff like display, position, height, margin, padding

layoutPadding = 15px
inputHeight = 60px

controlPanelWidth = 40%

outputPanelWidth = 100% - controlPanelWidth

.root-panel
  display: flex
  flex-direction: row
  flex-wrap: nowrap

  position: fixed
  top: 0
  bottom: 0
  left: 0
  right: 0

  & > .ac-panel#main-control-panel
    width: controlPanelWidth
  & > .ac-panel
    width: outputPanelWidth

.ac-panel
  padding: layoutPadding layoutPadding 0 layoutPadding
  flex: 10 1 auto

  &#not-supported-panel
    width: 100%
    display: none

// Hides the main output panel if the Help panel or Control panel is visible
#control-panel + #output-panel
#help-panel + #output-panel
  display: none

.panel-row
  display: flex
  flex-wrap: nowrap
  padding: 0 0 layoutPadding 0

.panel-row.has-labels
  padding: 0 0 layoutPadding 0

.ac-panel.output-panel
  overflow: scroll
  overflow-y: scroll
  overflow-x: visible
  padding: 0

  .panel-spacer
    padding: layoutPadding


///// Mixin/function for children of a "panel-row"
panelRowChild()
  display: inline-block
  padding: 0 (layoutPadding / 2)
  // 8 can be conisdered full-width. Input wrappers all try to fill width by default.
  flex-grow: 8

  &:first-child
    padding-left: 0

  &:last-child
    padding-right: 0

  &.square
    flex-grow: 0
    width: (layoutPadding + inputHeight) * 2

  &.flex-sm
    flex-grow: 2

  &.flex-md
    flex-grow: 4

  &.flex-lg
    flex-grow: 8

  .ac-input
  .ac-output
    &.text
      padding: 2px 6px
    &.textarea
      padding: 0 2px

///// Aliases for "panel-row-child"
.ac-control-wrapper
.panel-row-child
  panelRowChild()

.ac-input
.ac-output
  width: 100%
  min-height: inputHeight
  box-sizing: border-box

  &.double-height
    height: inputHeight * 1.5

.panel-close-button
  margin: 10px 0
  padding: 0 10px !important
  text-align: right
  color: textColor

  &:hover
    color: lighten(textColor, 20%)
  &:active
    color: lighten(textColor, 33%)
