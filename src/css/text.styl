// Styling of text and fonts on the page.

inputFontSize = 16px
labelFontSize = 12px
chordDictionaryFontSize = 16px

errorColor = #E88

body
  font-family: 'Helvetica', 'Arial', sans-serif

.ac-input, .ac-output
  &.text
    font-size: inputFontSize
  &.textarea
    font-size: inputFontSize * 1.5

  &.button
    font-size: inputFontSize
    font-weight: bold

.ac-input-label
  font-size: labelFontSize
  text-transform: uppercase
  letter-spacing: 2px
  padding-left: 1px

#chord-dictionary li
  font-family: monospace
  font-size: chordDictionaryFontSize

#status-output.ac-output
  .line
    opacity: 0.33

  .first
    opacity: 1

  .hasError
    color: errorColor
    font-weight: bold
