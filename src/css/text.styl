// Styling of text and fonts on the page.

inputFontSize = 16px
labelFontSize = 12px
chordDictionaryFontSize = 16px

errorColor = #E88
mainLinkColor = #BBF

mainHeadingSize = 3em

body, div, span, p, a
  font-family: 'Source Sans Pro', sans-serif;

h1, h2, h3, h4, h5, h6
  margin: 10px 0

h1
  font-size: mainHeadingSize
h2
  font-size: mainHeadingSize * 0.75
h3
  font-size: mainHeadingSize * 0.6
h4
  font-size: mainHeadingSize * 0.5
h5
  font-size: mainHeadingSize * 0.4
h6
  font-size: mainHeadingSize * 0.35

h1#main-title
  margin: 0

.ac-input, .ac-output
  &.text
    font-size: inputFontSize
  &.textarea
    font-size: inputFontSize * 1.5

  &.button
    font-size: inputFontSize
    font-weight: bold
    text-transform: uppercase
    letter-spacing: 2px

    .button-text-icon
      font-weight: normal
      margin-top: 5px
      display: inline-block
      font-size: 13px

    i.fa-play.has-text
      padding-left: 5px

.ac-input-label
  font-size: labelFontSize
  text-transform: uppercase
  letter-spacing: 2px
  padding-left: 1px


#main-control-panel a
  color: mainLinkColor
  text-decoration: none

  &:hover
  &:active
    color: lighten(mainLinkColor, 20%)

#chord-dictionary li
  font-family: monospace
  font-size: chordDictionaryFontSize

#status-output.ac-output
  .line
    opacity: 0.33

  .first
    opacity: 1

  .hasError
    color: errorColor
    font-weight: bold
