{
  "name": "autocomposer-melody",
  "version": "0.0.1",
  "description": "A web app that displays simple musical melodies based on a chord progression",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/rjsalvadorr/autocomposer-melody.git"
  },
  "scripts": {
    "test": "mocha && esdoc",
    "compile-css": "stylus src/css/style.styl -o public/style.css",
    "build-sandbox": "browserify public/test/raw.js -o public/test/index.js",
    "build-dev": "browserify src/app-main.js -o dist/autocomposer-melody.js -t [ babelify --presets [ react ] ]",
    "build-prod": "browserify src/app-main.js -t [ babelify --presets [ react ] ] | uglifyjs -o dist/autocomposer-melody.js",
    "build-public": "browserify src/app-main.js -t [ babelify --presets [ react ] ] | uglifyjs -o public/autocomposer-melody.js && npm run compile-css",
    "build-all": "npm test && npm run build-prod && npm run build-public && npm run build-sandbox"
  },
  "author": "RJ Salvador",
  "license": "ISC",
  "dependencies": {
    "jquery": "^3.2.1",
    "midi-player-js": "^1.1.1",
    "midi-writer-js": "^1.4.7",
    "moment": "^2.18.1",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "soundfont-player": "^0.10.5",
    "tonal": "^0.69.5",
    "tonal-chord": "^0.69.5",
    "tonal-note": "^0.69.5",
    "tonal-range": "^0.69.5",
    "underscore": "^1.8.3",
    "vexflow": "^1.2.83"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^7.3.0",
    "browserify": "^14.3.0",
    "esdoc": "^0.5.2",
    "esdoc-node": "^1.0.2",
    "mocha": "^3.3.0",
    "stylus": "^0.54.5",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony"
  }
}
